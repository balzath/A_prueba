<div class="container">
  <%= simple_form_for @item do |f| %>
    <%= f.input :sentence,label: 'Inserte sentencia' %>
    <%= f.button :submit,'Evaluar',class: 'btn btn-info' , style: 'margin-top: 10px'  %>
  <% end %>
  <br>
  <hr>
  <% if @items.any? %>
    <table class="table">
      <thead class="table-dark">
        <tr>
          <td>Id</td>
          <td>Sentencia</td>
          <td>Respuesta</td>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |i| %>
          <tr>
            <td><%= i.id %></td>
            <td><%= i.sentence %></td>
            <td><%= i.answer %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <h4 style="color: red">No se han creado sentencias</h4>
  <% end %>
</div>